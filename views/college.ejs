    %>
<div class="college-container" id="colleges">
    <% colleges.forEach(college => { %>
        <div class="college-section">
            <h2 class="college-name"><%= college.name %></h2>
            <div class="events">
                <% college.events.forEach(event => { %>
                    <div class="event lazy">
                        <img src="<%= event.img %>" alt="<%= event.title %>">
                        <div id="tags">
                            <h3><%= event.title %></h3>
                            <!-- Tags Section -->
                            <% if (event.tags && event.tags.length > 0) { %>
                                <div class="event-tags">
                                    <% event.tags.forEach(tag => { %>
                                        <span class="tag"><%= tag %></span>
                                    <% }); %>
                                </div>
                                <% } %>
                        </div>
                        
                        <p class="event-date"><%= event.date %></p> <!-- Date Section -->
                        <p class="event-des"><%= event.desc %></p>
                        
                        
                        
                        <div class="event-buttons">
                            <a href="/contact/<%= event.title + '&' + college.name + '&' + event.date %>">
                                <button style="width: 130px;">Contact Us</button>
                            </a>                            
                            <button onclick="window.open('<%= event.url %>', '_blank')">Details</button>
                            <button onclick="shareContent('<%= college.name %>', '<%= event.title %>', '<%= event.date %>', '<%= event.desc %>', '<%= event.url %>')">Share</button>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    <% }); %>
